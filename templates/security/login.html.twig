{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="wrapper">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            <h2>Connexion</h2>
            <div class="logs">
                <p>Adresse email: <span>candidat@gmail.com</span> ou <span>recruteur@gmail.com</span></p>
                <p>Mot de passe: <span>Talentblend-67</span></p>
            </div>
            <div class="form-group">
                <div>
                    <label for="inputEmail">Adresse email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
            </div>

            <a class="forgot-password" href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
        
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
            <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
            <p class="haveacc">Vous n'avez pas de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous</a></p>
        </form>
    </div>
</div>
{% endblock %}
